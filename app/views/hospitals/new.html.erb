<h1>添加医院信息</h1>

<% form_for(@hospital) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, "医院名称" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :zone, "所在地区" %><br />
    <%= f.text_field :zone %>
  </p>
  <p>
    <%= f.label :address, "医院地址" %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :grade, "级别" %><br />
    <%= f.text_field :grade %>
  </p>
  <p>
    <%= f.label :boy_no, "所需男生人数" %><br />
    <%= f.text_field :boy_no %>
  </p>
  <p>
    <%= f.label :girl_no, "所需女生人数" %><br />
    <%= f.text_field :girl_no %>
  </p>
  <p>
    <%= f.label :contact, "联系人" %><br />
    <%= f.text_field :contact %>
  </p>
  <p>
    <%= f.label :tel, "联系人电话" %><br />
    <%= f.text_field :tel %>
  </p>
  <p>
    <%= f.submit '添加' %>
  </p>
<% end %>

<%= link_to '返回列表', hospitals_path %>