<h1>科类列表</h1>

<table>
  <tr>
    <th>科类名称</th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%=h department.name %></td>
    <td><%= link_to '详细信息', department %></td>
    <td><%= link_to '编辑', edit_department_path(department) %></td>
    <td><%= link_to '删除', department, :confirm => '确定要删除吗?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '添加新科类', new_department_path %>